<section class="dashboard">
  <sidebar>
    <%= image_tag(('default-teacher.png'), class: 'avatar') %>
    <h3 class="sidebar-header"><%= @user.first_name %></h3>
    <ul class="profile content">
      <!-- <li>
        <p>name: <%#= @user.name %></p>
      </li>
      <li>
        <p>email: <%#= @user.email %></p>
      </li> -->
      <li>
        <h3 class="sidebar-header">your courses</h3>
      </li>
      <% @user.courses.each do |course| %>
        <li>
          <p>
            <%= link_to course.name, course %>
          </p>
        </li>
      <%end%>

    </ul>
  </sidebar>
</section>
<section id="instructor-chart">
  <div id="chart"></div>
</section>

<section class="instructor-info">

  <h3>My Students</h3>

  <% @user.students.each do |student| %>
    <li> <%= link_to "#{student.first_name} #{student.last_name}", edit_my_student_path(student) %></li>
  <%end%>

  <h3>My Courses</h3>

  <% @user.courses.each do |course| %>
    <li> <%= course.name %> <%= button_to "Delete", course, method: :patch %></li>
  <%end%>

  <h3>Available Courses to Teach</h3>
  <% Course.all.each do |course| %>
    <% if course.instructor == nil %>
      <li> <%= link_to course.name, add_instructor_course_path(course) %></li>
    <% end %>
  <%end%>

  <h3>Add a New Course</h3>
    <%= form_for Course.new do |f| %>
    <%= f.label :name, 'class name' %>
    <%= f.text_field :name %>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
    <%= f.submit %>
    <% end %>

</section>

