<%= link_to 'settings', edit_instructor_path %>
<%= button_to 'delete account', @user, method: :delete %>
<%=@user.first_name%>
<% @user.courses.each do |course| %>
  <li> <%= link_to course.name, course %></li>
<%end%>

<%= form_for Course.new do |f| %>
	<%= f.label :name, 'course name' %>
	<%= f.text_field :name%>
	<%= f.label :subject %>
	<%= f.text_field :subject %>
	<%= f.submit "new course" %>
<% end %>

<h2>My Students</h2>

<% @user.students.each do |student| %>
  <li> <%= link_to "#{student.first_name} #{student.last_name}", edit_my_student_path(student) %></li>
<%end%>
